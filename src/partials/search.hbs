        <p id="keyboardShortcut"><i class="fa fa-search" aria-hidden="true"></i> <kbd>alt</kbd><kbd>k</kbd></p>
        <p id="keyboardShortcutMac"><i class="fa fa-search" aria-hidden="true"></i> <kbd>cmd</kbd> <kbd>k</kbd></p>
  </span>
</div>
{{!-- &#x1F50E --}}

<script>
    var isMac = navigator.platform.toUpperCase().indexOf('MAC') >= 0;
    var searchInputWrapper = document.querySelector('.search-input-wrapper__icon');
    var searchBar = document.getElementById('searchBar');
    var keyboardShortcutElement = document.getElementById('keyboardShortcut');
    var keyboardShortcutMacElement = document.getElementById('keyboardShortcutMac');

    if (isMac) {
      keyboardShortcutElement.style.display = 'none';
      keyboardShortcutMacElement.style.display = 'block';

      searchBar.addEventListener('keydown', function(event) {
        if (event.metaKey && event.key == 's') {
          event.preventDefault();
          searchBar.focus();
        }
      });
    } else {
      keyboardShortcutElement.style.display = 'block';
      keyboardShortcutMacElement.style.display = 'none';
    }

    searchInputWrapper.addEventListener('click', function() {
      searchBar.focus();
    });
  
    searchBar.addEventListener('focus', function() {
      keyboardShortcutElement.style.opacity = '0.2';
      keyboardShortcutMacElement.style.opacity = '0.2';
    });

    searchBar.addEventListener('blur', function() {
      keyboardShortcutElement.style.opacity = '1';
      keyboardShortcutMacElement.style.opacity = '1';
    });
</script>
