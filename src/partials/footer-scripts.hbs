<script type="text/javascript">
(function() {
  'use strict';
  
  var currentFilters = [];
  
  // Initialize DocSearch with dynamic filters
  function initDocSearch(filters) {
    return docsearch({
      appId: 'NZWE7TXMBR',
      apiKey: '9117a4e7751be182a32d4e70a11d176a',
      indexName: 'magnolia-cms',
      container: '#searchBar',
      searchParameters: { 
        hitsPerPage: 12, 
        attributesToHighlight: ["hierarchy.lvl0"],
        facetFilters: filters
      },
      askAi: 'C6xQL7oXbB6z',
      transformItems: function(items) {
        return items.map(function(item) {
          // Add version badge if version exists and is not 'general'
          if (item.version && item.version !== 'general') {
            var badge = '<span class="version-badge">' + item.version + '</span>';
            if (item._highlightResult && item._highlightResult.hierarchy && item._highlightResult.hierarchy.lvl1) {
              item._highlightResult.hierarchy.lvl1.value += ' ' + badge;
            }
          }
          return item;
        });
      }
    });
  }
  
  // Restore filter from sessionStorage on page load
  var savedFilter = sessionStorage.getItem('docsearch-version-filter');
  if (savedFilter) {
    currentFilters = ['version:' + savedFilter];
  }
  
  // Initialize DocSearch on page load
  var docSearchInstance = initDocSearch(currentFilters);
  
  // Function to create and return filter element
  function createFilterElement() {
    // Create filter container
    var filterContainer = document.createElement('div');
    filterContainer.className = 'version-filter-container';
    filterContainer.setAttribute('data-filter-injected', 'true');
    
    // Create filter header
    var filterHeader = document.createElement('div');
    filterHeader.className = 'version-filter-header';
    
    // Create label
    var label = document.createElement('span');
    label.className = 'version-filter-label';
    label.textContent = 'Filter by version:';
    
    // Create select element
    var select = document.createElement('select');
    select.id = 'version-filter-dropdown';
    select.className = 'version-filter-select';
    select.setAttribute('aria-label', 'Filter documentation by version');
    
    // Add options - UPDATED to match crawler config
    var options = [
      { value: '', text: 'All Versions' },
      { value: 'latest', text: 'Latest (6.4)' },
      { value: '6.3', text: '6.3' },
      { value: '6.2', text: '6.2' },
      { value: 'cloud', text: 'DX Cloud' },
      { value: 'modules', text: 'Modules' },
      { value: 'general', text: 'General' }
    ];
    
    options.forEach(function(opt) {
      var option = document.createElement('option');
      option.value = opt.value;
      option.textContent = opt.text;
      select.appendChild(option);
    });
    
    // Set saved filter value
    var savedFilter = sessionStorage.getItem('docsearch-version-filter');
    if (savedFilter) {
      select.value = savedFilter;
      select.classList.add('has-filter');
    }
    
    // Add event listener
    select.addEventListener('change', function(e) {
      var selectedVersion = e.target.value;
      
      // Update filters
      if (selectedVersion) {
        currentFilters = ['version:' + selectedVersion];
        select.classList.add('has-filter');
        sessionStorage.setItem('docsearch-version-filter', selectedVersion);
      } else {
        currentFilters = [];
        select.classList.remove('has-filter');
        sessionStorage.removeItem('docsearch-version-filter');
      }
      
      // Reinitialize search with new filters
      docSearchInstance = initDocSearch(currentFilters);
      
      // Trigger a new search with current query
      var searchInput = document.querySelector('.DocSearch-Input');
      if (searchInput && searchInput.value) {
        var event = new Event('input', { bubbles: true });
        searchInput.dispatchEvent(event);
      }
    });
    
    // Create clear filter button (only show when filter is active)
    var clearButton = document.createElement('button');
    clearButton.className = 'version-filter-clear';
    clearButton.textContent = '√ó';
    clearButton.title = 'Clear filter';
    clearButton.style.display = savedFilter ? 'block' : 'none';
    
    clearButton.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      select.value = '';
      select.classList.remove('has-filter');
      clearButton.style.display = 'none';
      currentFilters = [];
      sessionStorage.removeItem('docsearch-version-filter');
      docSearchInstance = initDocSearch(currentFilters);
      
      // Trigger a new search
      var searchInput = document.querySelector('.DocSearch-Input');
      if (searchInput && searchInput.value) {
        var event = new Event('input', { bubbles: true });
        searchInput.dispatchEvent(event);
      }
    });
    
    // Update clear button visibility on select change
    select.addEventListener('change', function() {
      clearButton.style.display = select.value ? 'block' : 'none';
    });
    
    // Assemble the filter
    filterHeader.appendChild(label);
    filterHeader.appendChild(select);
    filterHeader.appendChild(clearButton);
    filterContainer.appendChild(filterHeader);
    
    return filterContainer;
  }
  
  // Inject filter - always tries to inject if not present
  function ensureFilterExists() {
    var modal = document.querySelector('.DocSearch-Modal');
    if (!modal) return;
    
    var dropdown = modal.querySelector('.DocSearch-Dropdown');
    if (!dropdown) return;
    
    // Check if filter already exists
    var existingFilter = dropdown.querySelector('.version-filter-container');
    if (existingFilter) return; // Already there, nothing to do
    
    // Inject the filter
    var filterElement = createFilterElement();
    dropdown.insertBefore(filterElement, dropdown.firstChild);
  }
  
  // Continuously check for filter - more aggressive approach
  var filterCheckInterval;
  
  function startFilterWatcher() {
    // Clear any existing interval
    if (filterCheckInterval) {
      clearInterval(filterCheckInterval);
    }
    
    // Check every 200ms if filter needs to be injected
    filterCheckInterval = setInterval(function() {
      var modal = document.querySelector('.DocSearch-Modal');
      if (modal) {
        ensureFilterExists();
      } else {
        // Modal closed, stop watching
        clearInterval(filterCheckInterval);
      }
    }, 200);
  }
  
  // Watch for modal opening
  var bodyObserver = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
      mutation.addedNodes.forEach(function(node) {
        if (node.nodeType === 1 && node.classList && node.classList.contains('DocSearch-Modal')) {
          startFilterWatcher();
        }
      });
    });
  });
  
  bodyObserver.observe(document.body, {
    childList: true,
    subtree: false
  });
  
  // Also listen for clicks on search button
  document.addEventListener('click', function(e) {
    if (e.target.closest('.DocSearch-Button') || e.target.closest('#searchBar')) {
      setTimeout(function() {
        startFilterWatcher();
      }, 100);
    }
  });
  
  // Listen for keyboard shortcut (/)
  document.addEventListener('keydown', function(e) {
    if (e.key === '/' && !e.target.matches('input, textarea')) {
      setTimeout(function() {
        startFilterWatcher();
      }, 100);
    }
  });
  
  // Toggle dropdown function (your existing code)
  function toggleDropDown() {
    var linkEl = document.querySelectorAll('.has-dropdown');
    var allDrops = document.querySelectorAll('.has-dropdown .navbar-dropdown');
    for (var i = 0; i < linkEl.length; i++) {
      linkEl[i].addEventListener('click', function(e) {
        for (var j = 0; j < allDrops.length; j++) {
          allDrops[j].style.display = "none";
        }
        e.stopPropagation();
        e.target.nextElementSibling.style.display = "block";
      });
    }
  }
  
  if (window.innerWidth < 1200) {
    toggleDropDown();
  }
})();
</script>

