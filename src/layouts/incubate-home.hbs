  <style>
    :root {
        --navbar-height: 5rem !important;
        --lora: 'Lora', serif !important;
        --labPurple: #008246;
        --labTeal: #0891B2;
        --labGreen: #059669;
        --labOrange: #EA580C;
        --labBg: #F8FAFC;
        --labCardBg: #FFFFFF;
        --experimentalGlow: rgba(107, 70, 193, 0.15);
        --fresh: #E2F0E4;
        --darkTeal: #02373F;
        --green: #068449;
        --blue: #0569F9;
    }

    /* Lab-themed animations */
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    @keyframes pulse-glow {
      0%, 100% { box-shadow: 0 0 0 rgba(107, 70, 193, 0.4); }
      50% { box-shadow: 0 0 20px rgba(107, 70, 193, 0.6); }
    }

    @keyframes beaker-bubble {
      0% { opacity: 0; transform: translateY(10px) scale(0.8); }
      50% { opacity: 1; transform: translateY(-5px) scale(1.1); }
      100% { opacity: 0; transform: translateY(-20px) scale(0.9); }
    }

    /* Hero title bubbling lab effect */
    @keyframes bubble-float {
      0% { opacity: 0.7; transform: translateY(0px) scale(1); }
      25% { opacity: 1; transform: translateY(-8px) scale(1.1); }
      50% { opacity: 0.8; transform: translateY(-15px) scale(0.9); }
      75% { opacity: 1; transform: translateY(-10px) scale(1.05); }
      100% { opacity: 0.7; transform: translateY(0px) scale(1); }
    }

    /* Enhanced lab theme styling with full-body background */
    html, body {
        background-color: var(--labBg) !important; /* use your base bg */
        color: #333 !important;
    }

    .hero-body {
      flex-grow: 0!important;
    }

    /* Hero title with bubbling lab effect */
    .titled {
      font-family: var(--lora)!important;
      font-size: 68px !important;
      font-weight: 400 !important;
      line-height: 102px !important;
      background: linear-gradient(135deg, var(--labPurple), var(--labTeal));
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      position: relative;
      display: inline-block;
    }

    /* Bubbling lab equipment between words */
    .lab-bubbles {
      display: inline-block;
      position: relative;
      margin: 0 20px;
      vertical-align: middle;
      width: 60px;
      height: 80px;
      overflow: visible; /* Ensure nothing gets clipped */
    }

    .lab-equipment {
      position: absolute;
      font-size: 2rem;
      left: 1%;
      top: 7%;
      transform: translate(-50%, -50%);
      animation: float 3s ease-in-out infinite;
      z-index: 10;
      background: none !important;
      -webkit-text-fill-color: initial !important; /* Override parent's text-fill */
      color: initial !important; /* Use default emoji colors */
      text-shadow: none !important;
      display: block !important;
      width: auto !important;
      height: auto !important;
    }

    .bubble-dot {
      position: absolute;
      width: 6px;
      height: 6px;
      border-radius: 50%;
      left: 50%;
      animation: bubble-float 2s ease-in-out infinite;
      z-index: 5; /* Below the equipment */
    }

    .bubble-dot:nth-child(2) {
      background: var(--labPurple);
      top: 20px;
      left: 45%;
      animation-delay: 0s;
    }

    .bubble-dot:nth-child(3) {
      background: var(--labTeal);
      top: 15px;
      left: 55%;
      animation-delay: 0.3s;
    }

    .bubble-dot:nth-child(4) {
      background: var(--labGreen);
      top: 25px;
      left: 50%;
      animation-delay: 0.6s;
    }

    .bubble-dot:nth-child(5) {
      background: var(--labOrange);
      top: 10px;
      left: 48%;
      animation-delay: 0.9s;
    }

    .bubble-dot:nth-child(6) {
      background: var(--labPurple);
      top: 30px;
      left: 52%;
      animation-delay: 1.2s;
    }

    .paragraph {
      font-size: 22px;
      line-height: 32px;
      margin-bottom: 40px;
      color: #475569;
    }

    .subtitled {
      font-family: var(--lora)!important;
      font-size: 48px !important;
      font-weight: 700 !important;
      line-height: 52px !important;
      margin-bottom: 2rem!important;
      color: var(--labPurple) !important;
    }

    /* Lab-style navigation */
    .navbar {
      background: rgba(255, 255, 255, 0.95) !important;
      backdrop-filter: blur(10px);
      border-bottom: 2px solid var(--experimentalGlow);
    }

    .navbar-item img {
      max-width: 217px;
      max-height: none !important;
      width: 100%;
    }

    a.navbar-item {
      color: var(--labPurple) !important;
      font-weight: 600;
      position: relative;
      transition: all 0.3s ease;
    }

    a.navbar-item:hover {
      color: var(--labTeal) !important;
      background-color: rgba(107, 70, 193, 0.05) !important;
      transform: translateY(-2px);
    }

    /* Enhanced experimental cards */
    .card-x {
       box-shadow: 
         0 4px 20px rgba(107, 70, 193, 0.1),
         0 0 0 1px rgba(107, 70, 193, 0.1);
       padding: 32px;
       border-radius: 16px;
       background: linear-gradient(135deg, var(--labCardBg) 0%, #FEFEFE 100%);
       display: flex;
       flex-direction: column;
       height: 100%;
       transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
       position: relative;
       overflow: hidden;
    }

    .card-x::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--labPurple), var(--labTeal), var(--labGreen));
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .card-x:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 
        0 20px 40px rgba(107, 70, 193, 0.2),
        0 0 0 2px rgba(107, 70, 193, 0.2);
    }

    .card-x:hover::before {
      opacity: 1;
    }

    .card-x .card-x__p {
      font-size: 18px;
      line-height: 28px;
      color: #64748B;
    }

    .card-x__link-w {
      padding-top: 24px;
      margin-top: auto;
    }

    /* Lab-style status indicators */
    .experimental-badge {
      position: absolute;
      top: 16px;
      right: 16px;
      background: linear-gradient(135deg, var(--labPurple), var(--labTeal));
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      animation: pulse-glow 2s ease-in-out infinite;
    }

    /* Enhanced links */
    .link:not(.link-button) {
      font-size: 16px!important;
      color: var(--labPurple)!important;
      font-weight: 600;
      padding: 8px 16px!important;
      background: linear-gradient(135deg, rgba(107, 70, 193, 0.1), rgba(8, 145, 178, 0.1));
      border-radius: 8px;
      transition: all 0.3s ease;
      text-decoration: none;
      border: 1px solid rgba(107, 70, 193, 0.2);
      display: inline-block;
    }

    .link:hover {
      background: linear-gradient(135deg, rgba(107, 70, 193, 0.2), rgba(8, 145, 178, 0.2));
      transform: translateX(4px);
      color: var(--labTeal)!important;
    }

    .h3 {
      font-size: 28px;
      font-family: var(--lora);
      font-weight: 700;
      color: var(--labPurple);
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .h3 i {
      background: linear-gradient(135deg, var(--labPurple), var(--labTeal));
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      font-size: 1.2em;
    }

    /* Offset scroll target for sections with IDs to account for fixed navbar */
    section[id] {
      scroll-margin-top: var(--navbar-height);
    }

    /* Lab section styling - flat sections, no card appearance */
    .lab-section {
      background: transparent;
      backdrop-filter: none;
      border: none;
      border-radius: 0;
      margin: 2rem 0;
      padding: 3rem 0;
      position: relative;
      overflow: hidden;
    }

    .lab-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, var(--labPurple), var(--labTeal), var(--labGreen), var(--labOrange));
      opacity: 0; /* Hide by default */
    }

    /* Only show the color spectrum on the experimental features section */
    #experimental-features.lab-section::before {
      opacity: 1;
    }

    /* Hero section enhancements - simplified since background is now on body */
    #hero-header {
      text-align: center!important;
    }

    section.hero .hero-body {
      background: transparent !important;
      position: relative;
    }

    /* Buttons */
    .button {
      border-radius: 8px!important;
      font-weight: 600!important;
      transition: all 0.3s ease!important;
    }

    .button.is-primary {
      background: linear-gradient(135deg, var(--labPurple), var(--labTeal)) !important;
      border: none !important;
      color: var(--fresh) !important;
    }

    .button.is-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(107, 70, 193, 0.3);
      text-decoration: none !important;
    }

    .columns:last-child {
      margin-bottom: 0!important;
    }

    .columns {
      margin-top: 0!important;
    }

    .columns-breaker {
      flex-wrap: wrap;
    }

    /* Special lab equipment decorations */
    .lab-decoration {
      position: absolute;
      opacity: 0.1;
      pointer-events: none;
      font-size: 2rem;
      color: var(--labPurple);
      animation: float 4s ease-in-out infinite;
    }

    .lab-decoration:nth-child(2) { animation-delay: 1s; }
    .lab-decoration:nth-child(3) { animation-delay: 2s; }

    /* Responsive adjustments */
    @media print, screen and (max-width: 768px) {
      .lab-bubbles {
        width: 40px;
        height: 60px;
        margin: 0 10px;
      }
      
      .lab-equipment {
        font-size: 24px;
      }
      
      .hero.is-medium .hero-body {
          padding: 40px 20px!important;
      }

       h1.title.titled {
        font-size: 40px!important;
      }
    }

    @media print, screen and (min-width: 769px) {
      .hero.is-medium  .hero-body {
          padding: 100px 0!important;
      }
    }

    @media screen and (max-width:1023px) {
      h2, h2.subtitled {
        font-size: 30px!important;
        line-height: initial!important;
      }

      .paragraph, .card-x .card-x__p {
        font-size: 18px;
        line-height: initial;
      }

      .h3 {
        font-size: 24px;
        margin-bottom: 16px;
      }

      .link:not(.link-button) {
        font-size: 14px!important;
      }
    }

    @media(max-width: 1215px) {
      .columns-breaker .column {
        margin-bottom: 1.2rem;
      }
    }

    .hero-link {
        background: #fff !important;      /* card-like background */
        border-radius: 1rem;              /* pill shape */
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        font-weight: 500;
        color: var(--labPurple) !important;
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        white-space: nowrap;              /* keeps text in one line */
        }

    .hero-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 14px rgba(0,0,0,0.12);
        color: var(--labPurple) !important;
        text-decoration: none !important;
    }

    .hero {
        background: 
            linear-gradient(135deg, var(--fresh) 0%, rgba(248, 250, 252, 0.8) 100%),
            url("data:image/svg+xml,%3Csvg ... %3C/svg%3E");
        background-size: cover, 1200px 600px;
        background-position: center, right -100px top 50px;
        background-repeat: no-repeat, no-repeat;
        position: relative; /* keep ::after working */
    }

    .hero::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 80px;
        background: linear-gradient(to bottom, rgba(248, 250, 252, 0), var(--labBg));
        pointer-events: none;
    }

.tier-carousel {
  padding: 50px 0; /* Adds vertical spacing above and below the carousel */
