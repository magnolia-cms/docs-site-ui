  <style>
    :root {
        --lora: 'Lora', serif !important;
        --fresh: #E2F0E4;
        --darkTeal: #02373F;
        --green: #068449;
        --blue: #0569F9;
    }


    .hero-body {
      flex-grow: 0!important;
    }

    .hero.has-image .hero-body {
      background-image: url("{{{uiRootPath}}}/img/core-visual-hero-books.png");
      background-repeat: no-repeat;
      background-size: 1034px 546px;
      background-position: 100px top;
      background-position: right -250px top 0;
      padding-bottom: 100px!important;
    }

    .hero.is-white :where(.subtitle, .paragraph) {
      color:  #003740;
    }

  
    .titled {
      font-family: var(--lora)!important;
      font-size: 68px !important;
      font-weight: 400 !important;
      line-height: 102px !important;
    }

    .paragraph {
      font-size: 22px;
      line-height: 32px;
      margin-bottom: 40px;
    }

    .subtitled {
      font-family: var(--lora)!important;
      font-size: 48px !important;
      font-weight: 700 !important;
      line-height: 52px !important;
      margin-bottom: 2rem!important;
    }

    #docsearch.container {
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
    }

    .DocSearch-Button-Container {
        margin-left: auto;
        width: 113px;
        height: 100%;
        background-color: var(--green);
        justify-content: center;
    }

    .DocSearch-Button-Container svg path {
      stroke: white;
    }

    .DocSearch-Button-Placeholder, .DocSearch-Button-Keys {
      display: none;
    }


    button.DocSearch.DocSearch-Button {
      width: 100% !important;
      height: 113px !important;
      background-color: white!important;
      border-radius: 0;
      margin: 0;
      padding: 0!important;
      position: relative;
    }

    button.DocSearch.DocSearch:after {
      position: absolute;
      content: "What can we help you find?";
      left: 45px;
      font-size: 2rem;
      width: auto;
      height: auto;
    }

    @media(max-width: 768px) {
      button.DocSearch.DocSearch:after {
        font-size: 1.5rem;
      }
    }

    @media(max-width: 600px) {
      button.DocSearch.DocSearch:after {
        font-size: 1rem;
      }
    }

    @media(max-width: 467px) {
      button.DocSearch.DocSearch:after {
        content: "Search";
        font-size: 1.2rem;
      }
    }

     .button {
      border-radius: 0!important;
    }

    h1.title.titled {
      color: var(--darkTeal)!important;
      line-height: 1.1 !important;
    }

    .h3 {
      font-size: 32px;
      font-family: var(--lora);
      font-weight: 700;
      color: var(--darkTeal);
      margin-bottom: 24px;
    }

    .h3.h3--green {
      color: var(--green);
    }
    
    button.button {
