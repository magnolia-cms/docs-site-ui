      color: var(--blue)!important;
      font-weight: 500;
      padding: 0!important;
      padding-right: 30px!important;
      transition: all ease-in-out .3s;
    }

    .link:hover {
      padding-left: 10px!important;
    }

    .link:not(.link-button--no-arrow)::after {
      width: 20px;
      height: 20px;
      color: white!important;
      background-color: var(--blue)!important;
      border-radius: 50%;
      content: "";
      position: absolute;
      right: 0;
    }

    .link:not(.link-button--no-arrow)::before {
      right: 8px!important;
      top: 45%!important;
      color: white;
    }

    #get-to-know-magnolia {
      margin-top: -6rem;
      opacity: 0.1 !important;
    }

    a.button {
      background-color: #0569f9 !important;
      color: whitesmoke;
      text-decoration: none !important;
      transition: 0.3s ease;
      display: inline-block;
    }

    a.button:hover {
